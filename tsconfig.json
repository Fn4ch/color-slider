{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "classic",
    "outDir": "dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/index.ts"]
}
